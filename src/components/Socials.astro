---
import SocialIcon from './SocialIcon.astro';

interface Social {
    icon: 'github' | 'linkedIn' | 'twitter' | 'email' | 'xing';
    link: string;
    title?: string;
}

const socials = [
  {
    name: 'Blog',
    url: 'https://mdohr.space',
    icon: '📝', // Kannst du durch SVGs ersetzen
    bgLeft: 'bg-primary',       
    bgRight: 'bg-[#999]',     // Grau
  },
  {
    name: 'GitHub',
    url: 'https://github.com/mdohr07',
    icon: '🐙',
    bgLeft: 'bg-primary',
    bgRight: 'bg-[#999]',
  },
  {
    name: 'Email',
    url: 'mailto:mdohr07@gmail.com',
    icon: '✉️',
    bgLeft: 'bg-primary',
    bgRight: 'bg-[#999]', // Gelb
  },
];
---

<div class="flex flex-wrap gap-4 social-icons">
  {socials.map(({ name, url, icon, bgLeft, bgRight }) => (
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex cursor-pointer rounded-full overflow-hidden shadow-md font-mono text-sm font-semibold select-none"
    >
      <span class={`${bgLeft} px-4 flex items-center justify-center text-black`}>
        {name}
      </span>
      <span class={`${bgRight} px-3 flex items-center justify-center text-white`}>
        {icon}
      </span>
    </a>
  ))}
</div>

